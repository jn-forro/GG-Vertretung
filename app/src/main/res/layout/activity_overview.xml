<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.forro_apps.ggvertretungsplan.OverviewActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:id="@+id/ticker"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:minHeight="13dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/containerToday">
            11<TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/todayDate"
                    android:textSize="24sp"/>
            <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:id="@+id/todayLastUpdate"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:minHeight="44dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/containerTomorrow">
            <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/tomorrowDate"
                    android:textSize="24sp"/>
            <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:id="@+id/tomorrowLastUpdate"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
